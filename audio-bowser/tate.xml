<!-- TinyHAL configuration file for Kindle Fire HD -->
<tinyhal>

   <!-- Speaker Volume -->
   <!-- We are able to have most of our routing static so do that -->
   <path>
     <ctl name="DL1 Media Playback Volume" val="118" />
     <ctl name="DL1 Voice Playback Volume" val="120" />
     <ctl name="SDT UL Volume" val="101" />
     <ctl name="DL1 MM_EXT Switch" val="1" />
     <ctl name="Sidetone Mixer Playback" val="1" />
     <ctl name="DL1 Mixer Multimedia" val="1" />
     <ctl name="MUX_UL11" val="MMExt Right" />
     <ctl name="MUX_UL10" val="MMExt Left" />
     <ctl name="MIXINR PGA Volume" val="7" />
     <ctl name="Digital Capture Volume" val="0,0" />
     <ctl name="Capture Switch" val="1,1" />
     <ctl name="Headphone ZC Switch" val="1,1" />
     <ctl name="Speaker Boost Volume" val="4" />
     <ctl name="Speaker ZC Switch" val="1,1" />
     <ctl name="MIXINL PGA Switch" val="0" />
     <ctl name="HP Switch" val="0" />
     <ctl name="SPK Switch" val="0" />
   </path>

<device name="speaker">
   <path name="on">
     <ctl name="SPK Switch" val="1" />
   </path>
   <path name="off">
     <ctl name="SPK Switch" val="0" />
   </path>
</device>

<device name="headphone">
   <path name="on">
     <ctl name="HP Switch" val="1" />
   </path>
   <path name="off">
     <ctl name="HP Switch" val="0" />
   </path>
</device>

</tinyhal>
